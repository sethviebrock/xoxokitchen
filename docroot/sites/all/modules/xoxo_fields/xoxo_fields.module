      }
      // set value for description
      $dd->{XOXO_FIELDS_DAYD_TEXT}[LANGUAGE_NONE][0]['value'] = $value;
      node_save($dd);
      return $dd;
    }
    else {
      return _xoxo_fields_create_day_description($value, $date);
    }
  }
}

